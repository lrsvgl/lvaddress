
<T3DataStructure>
    <sheets>
        <sDEF1>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Ansprechpartner Akion</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <TCEforms>
                            <label>Standardaktion des Plugins</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="1">
                                        <numIndex index="0">Ansprechpartner Liste</numIndex>
                                        <numIndex index="1">Address->list;Address->show;</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">Ansprechpartner Einzelansicht</numIndex>
                                        <numIndex index="1">Address->singleView;</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>
                </el>
            </ROOT>
        </sDEF1>
        <sDEF2>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen Gruppe</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.groupUid>
                        <TCEforms>
                            <label>Gruppe wählen</label>
                            <config>
                                <type>select</type>
                                <foreign_table>tx_lvaddress_domain_model_group</foreign_table>
                                <minitems>1</minitems>
                                <maxitems>1</maxitems>
                                <multiple>1</multiple>
                                <size>10</size>
                                <autoSizeMax>30</autoSizeMax>
                                <itemListStyle>Width:350px</itemListStyle>
                            </config>
                        </TCEforms>
                    </settings.groupUid>
                    <settings.imgWidth>
                        <TCEforms>
                            <label>max. Bildbreite</label>
                            <config>
                                <type>input</type>
                                <size>5</size>
                            </config>
                        </TCEforms>
                    </settings.imgWidth>
                    <settings.imgHeight>
                        <TCEforms>
                            <label>max. Bildhöhe</label>
                            <config>
                                <type>input</type>
                                <size>5</size>
                            </config>
                        </TCEforms>
                    </settings.imgHeight>
                </el>
            </ROOT>
        </sDEF2>
        <sDEF3>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen Einzelansicht</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.singleUid>
                        <TCEforms>
                            <label>Ansprechpartner wählen</label>
                            <config>
                                <type>select</type>
                                <foreign_table>tx_lvaddress_domain_model_address</foreign_table>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <multiple>1</multiple>
                                <size>10</size>
                                <autoSizeMax>30</autoSizeMax>
                                <itemListStyle>Width:350px</itemListStyle>
                            </config>
                        </TCEforms>
                    </settings.singleUid>
                    <settings.singleImgWidth>
                        <TCEforms>
                            <label>max. Bildbreite</label>
                            <config>
                                <type>input</type>
                                <size>5</size>
                            </config>
                        </TCEforms>
                    </settings.singleImgWidth>
                    <settings.singleImgHeight>
                        <TCEforms>
                            <label>max. Bildhöhe</label>
                            <config>
                                <type>input</type>
                                <size>5</size>
                            </config>
                        </TCEforms>
                    </settings.singleImgHeight>
                </el>
            </ROOT>
        </sDEF3>
    </sheets>
</T3DataStructure> 